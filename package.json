{
  "private": true,
  "name": "ecu-monorepo",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "link:ecu": "rimraf app/node_modules/ecu && mkdir app/node_modules/ecu && cp -r packages/ecu/package.json app/node_modules/ecu/package.json && cp -r packages/ecu/dist app/node_modules/ecu && cp -r packages/ecu/src app/node_modules/ecu && cd app/node_modules/ecu && npm version patch",
    "dev:client": "(cd packages/ecu && npm run dev)",
    "dev:server": "(cd packages/ecu && npm run start:watch)",
    "dev:app": "(cd app && npm run dev)",
    "dev:ecu": "nodemon --watch packages/ecu/dist --exec \"npm run link:ecu\"",
    "minor:ecu": "(cd packages/ecu && npm version minor && npm publish)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dherault/ecu.git"
