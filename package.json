{
  "private": true,
  "name": "ecu-monorepo",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "link:packages": "npm run link:ecu && npm run link:app",
    "link:ecu": "(cd packages/ecu && npm run clean:peerDependencies && npm link)",
    "link:app": "(cd app && npm link ecu)",
    "dev:client": "(cd packages/ecu && npm run dev)",
    "dev:server": "(cd packages/ecu && npm run start:watch)",
    "dev:app": "npm run link:packages && (cd app && npm run dev)",
    "minor:ecu": "(cd packages/ecu && npm version minor && npm publish)"
  },
