{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "allowJs": true,
      "target": "ES6",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "baseUrl": ".",
      "outDir": "dist",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "paths": {
        "*": ["node_modules/*"],
        "@src/*": ["./src/*"]
      },
      "lib": [
        "ESNext"
      ],
      "suppressImplicitAnyIndexErrors": true,
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "target": "ES6",
    "module": "ES6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["./src/*"]
    },
    "lib": [
      "ESNext"
    ],
    "suppressImplicitAnyIndexErrors": true,
  },
  "include": ["src/**/*"]
}
