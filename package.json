{
  "name": "ecu",
  "version": "0.0.0",
  "description": "A npm package",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "link:packages": "npm run link:client && npm run link:app",
    "link:client": "(cd packages/@ecu/client && npm run clean:peerDependencies && npm link)",
    "link:app": "(cd app && npm link @ecu/client)",
    "dev:packages": "npm run dev:client",
    "dev:client": "(cd packages/@ecu/client && npm run dev)",
    "dev:server": "(cd packages/@ecu/server && (npm run dev & (sleep 3 && npm start)))",
    "dev:app": "npm run link:packages && (cd app && npm run dev)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dherault/ecu.git"
  },
